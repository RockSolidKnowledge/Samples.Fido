@page
@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Authenticated!</h1>
    <p>
        Hello, @User.FindFirstValue("sub")
    </p>
}
else
{
    <h1>Unauthenticated</h1>
    
    <ul>
        <li>Register a Passkey, using the register option</li>
        <li>Login and sign in using your Passkey, (username is optional)</li>
        <li>See how easy it is to provide a frictionless phishing resistant login process</li>
    </ul>
}