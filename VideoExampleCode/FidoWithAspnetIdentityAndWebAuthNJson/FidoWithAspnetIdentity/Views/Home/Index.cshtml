@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Authenticated!</h1>
    <p>
            <ul>
                @foreach (var claim in User.Claims)
                {
                    <li><strong>@claim.Type:</strong> @claim.Value</li>
                }
            </ul> 
    </p>
}
else
{
    <h1>Unauthenticated</h1>
}